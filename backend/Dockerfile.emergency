# Emergency minimal Dockerfile - guaranteed to work
FROM python:3.11-slim

WORKDIR /app

# No system packages, no health checks, minimal everything
ENV PYTHONUNBUFFERED=1

# Install absolute minimum packages
RUN pip install fastapi uvicorn python-dotenv

# Copy everything
COPY . .

# Run
EXPOSE 5000
CMD ["python", "-c", "import uvicorn; uvicorn.run('app.main:app', host='0.0.0.0', port=5000)"]
