{
  "name": "adaptive-learning",
  "version": "1.0.0",
  "description": "A modern full-stack adaptive learning platform built with FastAPI backend and React frontend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && python3 run.py",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && pip3 install -r requirements.txt",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test",
    "test-backend": "cd backend && pytest",
    "setup": "npm run install-all"
  },
  "keywords": [
    "adaptive-learning",
    "fastapi",
    "react",
    "education",
    "learning-platform",
    "full-stack"
  ],
  "author": "Praveen",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.3.1",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
